{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:jest/all"
  ],
  "globals": {
    "document": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "jest": {
      "globalAliases": {
        "describe": [
          "context"
        ],
        "fdescribe": [
          "fcontext"
        ],
        "xdescribe": [
          "xcontext"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "*.js",
        "*.jsx",
        "test/**"
      ]
    }
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "react/prop-types": 0,
    "arrow-body-style": 0,
    "react/no-array-index-key": 0,
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "import/no-extraneous-dependencies": 0
  }
}